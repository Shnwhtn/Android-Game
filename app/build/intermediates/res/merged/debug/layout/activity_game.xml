<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.labs.acw.GameActivity">

    <fragment
        android:id="@+id/fragment_gamescreen"
        android:name="mobile.labs.acw.gamescreen"
        android:layout_width="368dp"
        android:layout_height="430dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_gamescreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:id="@+id/fragment_score"
        android:name="mobile.labs.acw.scorescreen"
        android:layout_width="386dp"
        android:layout_height="165dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_scorescreen"
        app:layout_constraintTop_toBottomOf="@+id/fragment_gamescreen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment_gamescreen" />

</RelativeLayout>
